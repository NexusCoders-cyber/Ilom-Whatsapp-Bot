  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/assets/**",
      "!src/locales/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/",
      "index.js"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "logs/",
      "temp/",
      "session/",
      "media/",
      "backups/"
    ],
    "delay": "2000"
  },
  "config": {
    "port": 3000,
    "database": {
      "url": "mongodb://localhost:27017/ilombot"
    },
    "redis": {
      "url": "redis://localhost:6379"
    }
  },
